<h1>Edit Animal</h1>

  <% if @animal.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
      <% @animal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @animal do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit %>
  <% end %>
